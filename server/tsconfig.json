{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "allowJs": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "db"
    ]
}
